<view class="page">
  <view class="page__bd">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_select">
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">类型</view>
          </view>
          <view class="weui-cell__bd">
            <!--<picker bindchange="bindTypeChange" name="classes" value="{{typeIndex}}" range="{{types}}">
              <view class="weui-select weui-select_in-select-after">{{types[typeIndex]}}</view>
            </picker>-->
            <input class="weui-input" placeholder="便于管理，分类筛选" name="classes" value="{{inputVal}}" bindinput="inputTyping" bindblur="blurInput" bindfocus="focusInput" placeholder-class="input-placeholder" />
          </view>
        </view>
        <!--搜索提示-->
        <view class="weui-cell weui-cell_input cell-class" wx:if="{{selectShow}}" wx:for="{{types}}" data-text="{{types[index]}}" bindtap="selectClass">
          <view class="weui-cell__hd">
            <view class="weui-label"></view>
          </view>
          <view class="weui-cell__bd py-3">
            {{item}}
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">名称</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="便于自己记忆，比如:QQ、淘宝等" name="name" placeholder-class="input-placeholder" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">账号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="建议填写全部，比如：手机号" name="account" placeholder-class="input-placeholder" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input" wx:for="{{passwordTips}}" wx:key="*this" wx:for-item="item">
          <view class="weui-cell__hd">
            <view class="weui-label">密码提示{{item.id}}</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="密码" name="{{item.unique}}" placeholder-class="input-placeholder" />
          </view>
        </view>
      </view>
      <view class="p-4">
        <button class="weui-btn" type="default" bindtap="addPasswordTips" disabled="{{disabled}}">添加密码提示</button>
      </view>
      <view class="p-4">
        <button class="weui-btn" type="primary" formType="submit" loading="{{loading}}" disabled="{{disabled}}">保存</button>
      </view>
    </form>
  </view>
</view>